{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1 class="text-center">Categorie</h1>
    <a class="btn btn-outline-primary my-1" href="{{ path('categorie_index') }}">back to list</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ categorie.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ categorie.image }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ categorie.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-primary my-1" href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>
    {{ include('categorie/_delete_form.html.twig') }}
{% endblock %}
