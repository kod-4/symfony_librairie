{% extends 'base.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
    <h1 class="text-center">Carousel</h1>
    <a class="btn btn-outline-primary my-1" href="{{ path('carousel_index') }}">back to list</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ carousel.nom }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.titre }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ carousel.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/carousel/' ~ carousel.image) }}" alt="" class="img-list"></td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ carousel.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-primary my-1" href="{{ path('carousel_edit', {'id': carousel.id}) }}">edit</a>
    {{ include('carousel/_delete_form.html.twig') }}
{% endblock %}
