{% extends 'base.html.twig' %}

{% block title %}Home index{% endblock %}

{% block body %}
    <h1 class="text-center">Home index</h1>

    <table class="table">
        <thead>
            <tr class="table-dark">
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Signature</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                <td>{{ home.id }}</td>
                <td>{{ home.titre }}</td>
                <td>{{ home.description }}</td>
                <td>{{ home.signature }}</td>
                <td>{{ home.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                    <a class="link-secondary me-2" href="{{ path('home_show', {'id': home.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('home_edit', {'id': home.id}) }}"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de contenu</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('home_new') }}">Create new</a>
{% endblock %}
