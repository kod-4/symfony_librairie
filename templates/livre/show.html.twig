{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1 class="text-center">Livre</h1>
    <a class="btn btn-outline-primary my-1" href="{{ path('livre_index') }}">back to list</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ livre.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/livres/' ~ livre.image) }}" alt="" class="img-list"></td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ livre.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ livre.updatedAt ? livre.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-primary my-1" href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>
    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
